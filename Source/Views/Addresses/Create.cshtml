@model ConfettiStore.Models.Address

@{
    ViewData["Title"] = "Create";
}
<div class="d-none d-md-block">
    <i class="fas fa-house-user text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Addresses")'">Addresses</a></li>
        <li>Create</li>
    </ul>
</div>
<h1>Create</h1>

<h4><i class="fas fa-house-user text-dark"></i> Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AddressName" class="control-label"></label>
                <input asp-for="AddressName" class="form-control shadow-sm" />
                <span asp-validation-for="AddressName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address1" class="control-label"></label>
                <input asp-for="Address1" class="form-control shadow-sm" />
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address2" class="control-label"></label>
                <input asp-for="Address2" class="form-control shadow-sm" />
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control shadow-sm" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateName" class="control-label"></label>
                <input asp-for="StateName" class="form-control shadow-sm" />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input @*onkeydown="numOnly()" maxlength="5"*@ asp-for="ZipCode" class="form-control shadow-sm" />
                @*<p id="num-only">Numerical Input Only</p>*@
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control shadow-sm" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistanceMiles" class="control-label"></label>
                <input @*onkeydown="numOnly()"*@ maxlength="5" asp-for="DistanceMiles" class="form-control shadow-sm" />
                @*<p id="num-only">Numerical Input Only</p>*@
                <span asp-validation-for="DistanceMiles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control shadow-sm" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Addresses")'">Return To List</button>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
