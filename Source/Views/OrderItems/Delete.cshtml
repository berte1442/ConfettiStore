@model ConfettiStore.Models.OrderItem

@{
    ViewData["Title"] = "Delete";
}
<div class="d-none d-md-block">
    <i class="fas fa-boxes text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "OrderItems")'">Order Items</a></li>
        <li><a href="javascript:history.go(-1)" title="Return to the order item details">Details</a></li>
        <li>Delete</li>
    </ul>
</div>
<h1>Delete</h1>

<h3>Are you sure you want to delete this customer?</h3>
<div>
    <h4><i class="fas fa-boxes text-dark"></i> Order Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerOrder.OrderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Confetti)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Confetti.ConfettiId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderItemId" />
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.OrderItemId">Back</a>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "OrderItems")'">Return To List</button>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
