@model ConfettiStore.Models.ConfettiCategory

@{
    ViewData["Title"] = "Create";
}
<div class="d-none d-md-block">
    <i class="fas fa-closed-captioning text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "ConfettiCategories")'">Confetti Categories</a></li>
        <li>Create</li>
    </ul>
</div>
<h1>Create</h1>

<h4><i class="fas fa-closed-captioning text-dark"></i> Confetti Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConfettiId" class="control-label"></label>
                <select asp-for="ConfettiId" class="form-control shadow-sm" asp-items="ViewBag.ConfettiId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control shadow-sm" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "ConfettiCategories")'">Return To List</button>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
