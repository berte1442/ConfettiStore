@model ConfettiStore.Models.ConfettiCategory

@{
    ViewData["Title"] = "Delete";
}
<div class="d-none d-md-block">
    <i class="fas fa-closed-captioning text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "ConfettiCategories")'">Confetti Categories</a></li>
        <li><a href="javascript:history.go(-1)" title="Return to the confetti category details">Details</a></li>
        <li>Delete</li>
    </ul>
</div>
<h1>Delete</h1>

<h3>Are you sure you want to delete this Confetti Category?</h3>
<div>
    <h4><i class="fas fa-closed-captioning text-dark"></i> Confetti Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Confetti)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Confetti.ConfettiId)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ConfettiCategoryId" />
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.ConfettiCategoryId">Back</a>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "ConfettiCategories")'">Return To List</button>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
