@model ConfettiStore.Models.ConfettiCategory

@{
    ViewData["Title"] = "Details";
}
<div class="d-none d-md-block">
    <i class="fas fa-closed-captioning text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "ConfettiCategories")'">Confetti Categories</a></li>
        <li>Details</li>
    </ul>
</div>
<h1>Details</h1>

<h4><i class="fas fa-closed-captioning text-dark"></i> Confetti Categories</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Category)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Category.CategoryId)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Confetti)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Confetti.ConfettiId)
    </dd>
</dl>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ConfettiCategoryId">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ConfettiCategoryId">Delete</a>
    <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "ConfettiCategories")'">Return To List</button>
</div>
