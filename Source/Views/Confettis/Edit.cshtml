@model ConfettiStore.Models.Confetti

@{
    ViewData["Title"] = "Edit";
}
<div class="d-none d-md-block">
    <i class="fas fa-star-of-life text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Confettis")'">Confetti</a></li>
        <li><a href="javascript:history.go(-1)" title="Return to the confetti details">Details</a></li>
        <li>Edit</li>
    </ul>
</div>
<h1>Edit</h1>

<h4><i class="fas fa-star-of-life text-dark"></i> Confetti</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ConfettiId" />
            <div class="form-group">
                <label asp-for="ConfettiName" class="control-label"></label>
                <input asp-for="ConfettiName" class="form-control" />
                <span asp-validation-for="ConfettiName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.ConfettiId">Back</a>
                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Confettis")'">Return To List</button>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
