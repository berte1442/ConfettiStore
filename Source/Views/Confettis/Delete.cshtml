@model ConfettiStore.Models.Confetti

@{
    ViewData["Title"] = "Delete";
}
<div class="d-none d-md-block">
    <i class="fas fa-star-of-life text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Confettis")'">Confetti</a></li>
        <li><a href="javascript:history.go(-1)" title="Return to the confetti details">Details</a></li>
        <li>Delete</li>
    </ul>
</div>
<h1>Delete</h1>

<h3>Are you sure you want to delete this confetti?</h3>
<div>
    <h4><i class="fas fa-star-of-life text-dark"></i> Confetti</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConfettiName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConfettiName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ConfettiId" />
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.ConfettiId">Back</a>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Confettis")'">Return To List</button>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
