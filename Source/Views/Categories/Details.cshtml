@model ConfettiStore.Models.Category

@{
    ViewData["Title"] = "Details";
}

<div class="d-none d-md-block">
    <i class="fas fa-copyright text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Categories")'">Categories</a></li>
        <li>Details</li>
    </ul>
</div>
<h1>Details</h1>

<h4><i class="fas fa-copyright text-dark"></i> Category</h4>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.CategoryId">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.CategoryId">Delete</a>
    <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Categories")'">Return To List</button>
</div>
