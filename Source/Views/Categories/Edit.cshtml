@model ConfettiStore.Models.Category

@{
    ViewData["Title"] = "Edit";
}
<div class="d-none d-md-block">
    <i class="fas fa-copyright text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Categories")'">Categories</a></li>
        <li><a href="javascript:history.go(-1)" title="Return to the category details">Details</a></li>
        <li>Edit</li>
    </ul>
</div>
<h1>Edit</h1>

<h4><i class="fas fa-user-friends text-dark"></i> Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.CategoryId">Back</a>
                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Categories")'">Return To List</button>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
