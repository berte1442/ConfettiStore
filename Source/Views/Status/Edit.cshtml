@model ConfettiStore.Models.Status

@{
    ViewData["Title"] = "Edit";
}
<div class="d-none d-md-block">
    <i class="fas fa-truck-moving text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Status")'">Status</a></li>
        <li><a href="javascript:history.go(-1)" title="Return to the status details">Details</a></li>
        <li>Edit</li>
    </ul>
</div>
<h1>Edit</h1>

<h4><i class="fas fa-truck-moving text-dark"></i> Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StatusId" />
            <div class="form-group">
                <label asp-for="StatusName" class="control-label"></label>
                <input asp-for="StatusName" class="form-control" />
                <span asp-validation-for="StatusName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.StatusId">Back</a>
                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Status")'">Return To List</button>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
