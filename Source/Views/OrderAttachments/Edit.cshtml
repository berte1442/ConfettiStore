@model ConfettiStore.Models.OrderAttachment

@{
    ViewData["Title"] = "Edit";
}
<div class="d-none d-md-block">
    <i class="fas fa-link text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "OrderAttachments")'">Order Attachments</a></li>
        <li><a href="javascript:history.go(-1)" title="Return to the order attachment details">Details</a></li>
        <li>Edit</li>
    </ul>
</div>
<h1>Edit</h1>

<h4><i class="fas fa-link text-dark"></i> Order Attachment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderAttachmentId" />
            <input type="hidden" asp-for="Created" />
            <div class="form-group">
                <label asp-for="OrderId" class="control-label"></label>
                <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Created" class="control-label"></label>
                    <input asp-for="Created" class="form-control" />
                    <span asp-validation-for="Created" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.OrderAttachmentId">Back</a>
                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "OrderAttachments")'">Return To List</button>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
