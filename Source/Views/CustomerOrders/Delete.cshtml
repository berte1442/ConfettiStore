@model ConfettiStore.Models.CustomerOrder

@{
    ViewData["Title"] = "Delete";
}
<div class="d-none d-md-block">
    <i class="fas fa-box text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "CustomerOrders")'">Orders</a></li>
        <li><a href="javascript:history.go(-1)" title="Return to the order details">Details</a></li>
        <li>Delete</li>
    </ul>
</div>
<h1>Delete</h1>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <h4><i class="fas fa-box text-dark"></i> Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SetupDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SetupDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickUpDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PickUpDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Personalized)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Personalized)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonalizedText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonalizedText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modified)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentalAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentalAddress.AddressId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventType.EventTypeId)
        </dd>
