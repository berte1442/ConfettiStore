            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.StatusId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.OrderId">Back</a>
        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "CustomerOrders")'">Return To List</button>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
