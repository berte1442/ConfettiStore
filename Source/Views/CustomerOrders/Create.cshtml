@model ConfettiStore.Models.CustomerOrder

@{
    ViewData["Title"] = "Create";
}
<div class="d-none d-md-block">
    <i class="fas fa-box text-dark float-right" style="font-size:50px;"></i>
    <ul class="breadcrumb">
        <li><a href="#" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
        <li><a href="#" onclick="location.href='@Url.Action("Index", "CustomerOrders")'">Orders</a></li>
        <li>Create</li>
    </ul>
</div>
<h1>Create</h1>

<h4><i class="fas fa-box text-dark"></i> Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control shadow-sm" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SetupDate" class="control-label"></label>
                <input asp-for="SetupDate" class="form-control shadow-sm" type="datetime-local" />
                <span asp-validation-for="SetupDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickUpDate" class="control-label"></label>
                <input asp-for="PickUpDate" class="form-control shadow-sm" type="datetime-local" />
                <span asp-validation-for="PickUpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control shadow-sm" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentPrice" class="control-label"></label>
                <input @*onkeydown="numOnly()"*@ asp-for="RentPrice" class="form-control shadow-sm" />
                @*<p id="num-only">Numerical Input Only</p>*@
                <span asp-validation-for="RentPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventTypeId" class="control-label"></label>
                <select asp-for="EventTypeId" class="form-control shadow-sm" asp-items="ViewBag.EventTypeId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input shadow-sm" asp-for="Personalized" /> @Html.DisplayNameFor(model => model.Personalized)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PersonalizedText" class="control-label"></label>
                <input asp-for="PersonalizedText" class="form-control shadow-sm" />
                <span asp-validation-for="PersonalizedText" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Created" class="control-label"></label>
                    <input asp-for="Created" class="form-control" />
                    <span asp-validation-for="Created" class="text-danger"></span>
                </div>*@
            @*<div class="form-group">
                    <label asp-for="Modified" class="control-label"></label>
                    <input asp-for="Modified" class="form-control" />
                    <span asp-validation-for="Modified" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="AddressId" class="control-label"></label>
                <select asp-for="AddressId" class="form-control shadow-sm" asp-items="ViewBag.AddressId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control shadow-sm" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control shadow-sm" asp-items="ViewBag.Status"></select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "CustomerOrders")'">Return To List</button>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
